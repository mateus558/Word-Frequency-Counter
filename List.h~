#ifndef LIST_H_
#define LIST_H_
#include <iostream>

template <typename T> struct NODE{
	T item;
	NODE* next;
	NODE* prev;
	NODE(){
		next = NULL;
		prev = NULL;
	}
	NODE(T item){
		this->item = item;
		next = NULL;
		prev = NULL;
	}
	bool operator !=(const NODE& no){
			//std::cout << no.item != this->item <<std::endl;
			return no.item != this->item;
	}
};

template <class T> class List{
	private:		
		struct NODE<T> *first;
		struct NODE<T> *last;
		struct NODE<T> *nil;
		bool init;
		int N;
	public:
		List(T b);
		void push_front(T key);
		void push_back(T key);
		void pop();
		T front(){return nil->next->item;}
		void remove(T key);
		bool search(T key);
		int size(){return N;}
		void display();		
		~List();
};

#endif
